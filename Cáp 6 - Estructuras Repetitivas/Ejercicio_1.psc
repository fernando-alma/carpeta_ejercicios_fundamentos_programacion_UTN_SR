Proceso Ejercicio_1
	Definir N, suma, i Como Entero;
	
	Escribir "Digite la cantidad de números a sumarse: ";
	Leer N;
	suma <- 0;
	
	Para i<-1 Hasta N Con Paso 1 Hacer
		
		suma <- suma + i;  //Suma iterativa
		
	FinPara
	
	Escribir "La suma es: ",suma; 
	
FinProceso
