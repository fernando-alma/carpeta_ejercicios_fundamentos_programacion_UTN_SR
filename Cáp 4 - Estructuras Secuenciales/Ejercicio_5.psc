Proceso Ejercicio_5
	Definir precio, descuento, precio_final Como Real;
	Escribir "Digite el precio a pagar: ";
	Leer precio;
	
	descuento <- precio * 0.15;	
	precio_final <- precio - descuento;
	
	Escribir "El precio total a pagar con descuento es: ",precio_final," $ ";
	
FinProceso
